{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"files": {
		"ignore": ["build", "coverage", "*.html", ".next/"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"bracketSpacing": false,
			"indentStyle": "space"
		}
	}
}
